<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LogInController">
    <children>
        <AnchorPane layoutX="100.0" layoutY="88.0">
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <TextField fx:id="usernameTextField" GridPane.columnIndex="1" />
                        <PasswordField fx:id="passwordTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="userNameLabel" text="Username" />
                        <Label fx:id="passwordLabel" text="Password" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="100.0" layoutY="185.0" prefHeight="30.0" prefWidth="200.0">
            <children>
                <HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Button fx:id="logInButton" mnemonicParsing="false" onAction="#onActionLogIn" prefHeight="30.0" prefWidth="95.0" text="Log In">
                            <font>
                                <Font size="14.0" />
                            </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                        </Button>
                        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onActionExit" prefHeight="30.0" prefWidth="95.0" text="Exit" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="100.0" layoutY="325.0">
            <children>
                <HBox>
                    <children>
                        <Label fx:id="locationText" text="Location: " />
                        <Label fx:id="locationLabel" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
