                        <TextField fx:id="customerAddressTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <TextField fx:id="customerPostalCodeTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <ComboBox fx:id="countryComboBox" onAction="#onActionCountryCombo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <ComboBox fx:id="divisionComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    </children>
                </GridPane>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="115.0" layoutY="329.0">
            <children>
                <HBox prefHeight="30.0" prefWidth="170.0" spacing="10.0">
                    <children>
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onActionSave" prefHeight="30.0" prefWidth="80.0" text="Save" />
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onActionCancel" prefHeight="30.0" prefWidth="80.0" text="Cancel" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
