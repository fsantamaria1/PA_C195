<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CustomersModifyController">
    <children>
        <AnchorPane layoutX="70.0" layoutY="27.0">
            <children>
                <GridPane prefWidth="260.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label fx:id="customerIDLabel" text="Customer ID" />
                        <Label fx:id="customerNameLabel" text="Customer Name" GridPane.rowIndex="1" />
                        <Label fx:id="phoneNumberLabel" text="Phone Number" GridPane.rowIndex="2" />
                        <Label fx:id="addressLabel" text="Address" GridPane.rowIndex="3" />
                        <Label fx:id="postalCodeLabel" text="Postal Code" GridPane.rowIndex="4" />
                        <Label fx:id="countryLabel" text="Country" GridPane.rowIndex="5" />
                        <Label fx:id="divisionLabel" text="Division" GridPane.rowIndex="6" />
                        <Label fx:id="customertoModifyIDLabel" minWidth="100.0" prefHeight="25.0" prefWidth="130.0" style="-fx-border-color: Black;" GridPane.columnIndex="1" />
